{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:e2e:headless": "HEADLESS=true jest --config=jest.e2e.config.js",
    "test:all": "npm run test && npm run test:e2e",
    "quality": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npx audit-ci --moderate",
    "security:fix": "npm audit fix",
    "prepare": "husky install",
    "create-feature": "chmod +x spec/create-feature.sh && spec/create-feature.sh"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.3",
    "@tailwindcss/typography": "^0.5.16",
    "@toast-ui/editor": "^3.2.2",
    "@toast-ui/editor-plugin-code-syntax-highlight": "^3.1.0",
    "@toast-ui/react-editor": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "easymde": "^2.20.0",
    "lucide-react": "^0.525.0",
    "nanoid": "^5.1.5",
    "next": "15.3.4",
    "next-mdx-remote": "^5.0.0",
    "playwright": "^1.53.2",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-simplemde-editor": "^5.2.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sass": "^1.89.2",
    "tailwind-merge": "^3.3.1",
    "unified": "^11.0.5",
    "zustand": "^5.0.6"
  },
  "overrides": {
    "@toast-ui/react-editor": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0"
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.6",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "audit-ci": "^7.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "puppeteer": "^24.11.2",
    "tailwindcss": "^4.0.9",
    "ts-jest": "^29.4.0",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,mdx,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
